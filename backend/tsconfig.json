{
  "include": ["src/**/*.ts", "test/**/*.spec.ts"],
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  }
}
